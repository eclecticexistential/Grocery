                        @if (meatType.Quantity > 0)
                        {
                            <button type="submit" class="btn btn-primary auto" name="Item" value="@meatType.Id">Add to Cart</button>
                        }
                        else
                        {
                            <h5>OUT OF STOCK</h5>
                        }
                    </div>
                </div>
            }
     </div>
        <div class="row bg-lightgrey">
            <h3>Chicken</h3>
                @foreach (var meatType in Model.Where(m => m.Type == "Chicken"))
                {
                    <div class="form-group">
                        <div class="col-md-2 h-2">
                            <h4>@meatType.ItemName</h4>
                            <img src="/Images/@meatType.CoverImageFileName" alt="@meatType.ItemName" class="h-5 image-responsive" />
